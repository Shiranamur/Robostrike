@page "/"

<PageTitle>Home</PageTitle>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100 align-items-center text-center">
        <!-- Boutons -->
        <div class="col-md-6 d-flex flex-column gap-3 px-5">
            <a class="btn custom-btn-glow" href="/login">PLAY</a>
            <a class="btn custom-btn-glow" href="/map">MAP</a>
            <a class="btn custom-btn-glow" href="/map/editor">CREATE MAP</a>
        </div>

        <!-- Image + Description -->
        <div class="col-md-6 d-flex flex-column align-items-center">
            <img src="images/Sprites/player1.png" alt="Player" class="img-fluid mb-4 shadow-lg rounded" style="max-height: 300px;">
            <p class="bg-dark bg-opacity-75 text-white p-4 rounded-4 shadow-sm w-100" style="max-width: 500px;">
                <strong>RoboStrike</strong> is a free, online multiplayer strategy game.
                Enter the arena and battle using your robots — where sharp reflexes and smart tactics decide who wins!
            </p>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url(/images/Backgrounds/Background1.png);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-btn-glow {
        background-color: #1f1f1f;
        color: white;
        border: 2px solid #6c757d;
        padding: 15px 30px;
        font-size: 1.2rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

        .custom-btn-glow:hover {
            background-color: #343a40;
            border-color: #adb5bd;
            box-shadow: 0 0 20px rgba(173, 181, 189, 0.6);
            transform: scale(1.03);
        }

        .custom-btn-glow:active {
            background-color: #121212;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.2) inset;
            transform: scale(0.98);
        }

</style>
